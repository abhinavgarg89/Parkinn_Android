<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.coingeittechnology.project4.Welcome"
    tools:showIn="@layout/activity_welcome">









    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Select Parking Location"
                android:id="@+id/textView5"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Noida"
        android:id="@+id/bNoida" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delhi"
        android:id="@+id/bDelhi"
        android:layout_above="@+id/bNoida"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ashok Nagar"
        android:id="@+id/bAshoknagar"
        android:layout_above="@+id/bDelhi"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Yamuna Bank"
        android:id="@+id/bYamunabank"
        android:layout_above="@+id/bAshoknagar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Lakshmi Nagar"
        android:id="@+id/bLakshminagar"
        android:layout_above="@+id/bYamunabank"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nirman Vihar"
        android:id="@+id/bNirmanvihar"
        android:layout_below="@+id/bNoida"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rajiv Chowk"
        android:id="@+id/bRajivchowk"
        android:layout_below="@+id/bNirmanvihar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="India Gate"
        android:id="@+id/bIndiagate"
        android:layout_below="@+id/bRajivchowk"
        android:layout_centerHorizontal="true" />

        </LinearLayout>
   </ScrollView>

</RelativeLayout>
